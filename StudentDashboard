    border: "none",
    borderRadius: "6px",
    cursor: "pointer",
  },
  content: {
    padding: "30px",
  },
  grid: {
    display: "grid",
    gridTemplateColumns: "repeat(auto-fit, minmax(220px, 1fr))",
    gap: "20px",
  },
  card: {
